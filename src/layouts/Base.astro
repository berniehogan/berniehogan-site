---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Bernie Hogan',
  description = 'Associate Professor, Oxford Internet Institute'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <title>{title}</title>
</head>
<body>
  <main>
    <slot />
  </main>
  <footer>
    <p>Bernie Hogan · Oxford Internet Institute · University of Oxford</p>
  </footer>
</body>
</html>
