---
import Base from '../layouts/Base.astro';
import { getCollection } from 'astro:content';

const consulting = await getCollection('consulting');
const sorted = consulting.sort((a, b) => (b.data.year || 0) - (a.data.year || 0));
---

<Base title="Consulting · Bernie Hogan">
  <p class="muted"><a href="/">← Bernie Hogan</a></p>

  <h1>Consulting</h1>

  {sorted.map(async (item) => {
    const { Content } = await item.render();
    return (
      <div class="work-entry">
        <div class="work-title">{item.data.title}</div>
        <div class="work-meta">
          {item.data.client && `${item.data.client}`}
          {item.data.year && ` · ${item.data.year}`}
        </div>
        <div class="work-annotation"><Content /></div>
      </div>
    );
  })}
</Base>
